<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorGray3"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:background="@mipmap/bg_mine2"
        >
        <Button
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:onClick="back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/btn_bg_back_white_blue"
            android:id="@+id/button" />
        <TextView
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:text="个人中心"/>
        <Button
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="10dp"
            android:onClick="setting"
            android:background="@drawable/btn_bg_settting_white_blue"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            />

        <TextView
            android:id="@+id/login_register"
            android:clickable="true"
            android:onClick="loginRegister"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="30dp"
            android:layout_centerHorizontal="true"
            android:maxLines="1"
            android:background="@drawable/button_blue"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:text="@string/mine_info"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="@dimen/lTextSize"/>
<!--
        <com.example.tr.greenfuel.customView.CustomRoundedImageView
            android:id="@+id/user_head_image"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            custom:cornerRadius="10dp"
            custom:type="circle"
            custom:imgSrc="@drawable/user_img"
            android:layout_marginBottom="20dp"
            android:layout_above="@+id/login_register"
            android:layout_centerHorizontal="true" />
 -->
        <com.example.tr.greenfuel.customView.CustomRoundedImageView
            android:id="@+id/user_head_image"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/user_img"
            android:layout_marginBottom="20dp"
            android:layout_above="@+id/login_register"
            android:layout_centerHorizontal="true"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@color/colorWhite"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            >
            <TextView
                android:id="@+id/distance"
                android:text="0.00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/tomato"
                android:textSize="@dimen/xxlTextSize"
                android:gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/today_driver_distance"
                android:gravity="center"/>
        </LinearLayout>
        <TextView
            android:layout_width="2px"
            android:layout_height="match_parent"
            android:background="@color/colorGray3"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@color/colorWhite"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">
            <TextView
                android:id="@+id/fule"
                android:text="0.00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/tomato"
                android:textSize="@dimen/xxlTextSize"
                android:gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/today_fuel_consumption"
                android:gravity="center"/>
        </LinearLayout>
        <TextView
            android:layout_width="2px"
            android:layout_height="match_parent"
            android:background="@color/colorGray3"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@color/colorWhite"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            >
            <TextView
                android:id="@+id/carbon"
                android:text="0.00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/tomato"
                android:textSize="@dimen/xxlTextSize"
                android:gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/today_emission"
                android:gravity="center"/>
        </LinearLayout>

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/colorGray3"/>
    <ScrollView
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
    <LinearLayout
        android:onClick="goEmissionOrder"
        android:layout_marginTop="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:clickable="true"
        android:background="@drawable/rect_bg_white_gray_press"
        >
        <TextView
            android:text="@string/emission_order"
            android:textSize="@dimen/lTextSize"
            android:padding="10dp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|right"
            android:padding="10dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:background="@color/transparent"/>
        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/btn_right_press"
            android:layout_gravity="center_vertical"
            />
    </LinearLayout>

    <LinearLayout
        android:onClick="goHistoryData"
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:clickable="true"
        android:background="@drawable/rect_bg_white_gray_press"
        >
        <TextView
            android:text="@string/history_data"
            android:textSize="@dimen/lTextSize"
            android:padding="10dp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|right"
            android:padding="10dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:background="@color/transparent"/>
        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/btn_right_press"
            android:layout_gravity="center_vertical"
            />
    </LinearLayout>

    <LinearLayout
        android:onClick="goSavePoint"
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="5dp"

        android:paddingRight="5dp"
        android:clickable="true"
        android:background="@drawable/rect_bg_white_gray_press"
        >
        <TextView
            android:text="@string/myRoute"
            android:textSize="@dimen/lTextSize"
            android:padding="10dp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|right"
            android:padding="10dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:background="@color/transparent"/>
        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/btn_right_press"
            android:layout_gravity="center_vertical"
            />
    </LinearLayout>
    <LinearLayout
        android:onClick="goSavePoint"
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:clickable="true"
        android:background="@drawable/rect_bg_white_gray_press"
        >
        <TextView
            android:text="@string/save_point"
            android:textSize="@dimen/lTextSize"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|right"
            android:padding="10dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:background="@color/transparent"/>
        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/btn_right_press"
            android:layout_gravity="center_vertical"
            />
    </LinearLayout>
    <LinearLayout
        android:onClick="setting"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingRight="5dp"
        android:clickable="true"
        android:background="@drawable/rect_bg_white_gray_press"
        >
        <TextView
            android:text="@string/mine_setting"
            android:textSize="@dimen/lTextSize"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|right"
            android:padding="10dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:background="@color/transparent"/>

    </LinearLayout>
    <LinearLayout
        android:onClick="goSavePoint"
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingRight="5dp"
        android:clickable="true"
        android:background="@drawable/rect_bg_white_gray_press"
        >
        <TextView
            android:text="@string/exit"
            android:textSize="@dimen/lTextSize"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|right"
            android:padding="10dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:background="@color/transparent"/>
    </LinearLayout>
    </LinearLayout>
    </ScrollView>
</LinearLayout>