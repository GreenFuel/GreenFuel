<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorGray3"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:background="@mipmap/mine_bg_pic"
        >
        <Button
            android:layout_marginTop="10dp"
            android:onClick="back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/btn_bg_back_white_blue"
            android:id="@+id/button" />
        <Button
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginTop="10dp"
            android:onClick="setting"
            android:background="@drawable/btn_bg_settting_white_blue"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            />

        <TextView
            android:id="@+id/login_register"
            android:clickable="true"
            android:onClick="loginRegister"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="30dp"
            android:layout_centerHorizontal="true"
            android:maxLines="1"
            android:background="@drawable/btn_corner_rect_press"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:text="@string/login_register"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="@dimen/lTextSize"/>

        <com.example.tr.greenfuel.customView.CustomRoundedImageView
            android:id="@+id/user_head_image"
            android:clickable="true"
            android:layout_width="80dp"
            android:layout_height="80dp"
            custom:cornerRadius="10dp"
            custom:type="circle"
            custom:imgSrc="@mipmap/ad3"
            android:layout_marginBottom="20dp"
            android:layout_above="@+id/login_register"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@color/colorWhite"
            android:padding="20dp">
            <TextView
                android:text="23.56"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/tomato"
                android:textSize="@dimen/xxlTextSize"
                android:gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/today_fuel_consumption"
                android:gravity="center"/>
        </LinearLayout>
        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/darkGrey"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@color/colorWhite"
            android:padding="20dp">
            <TextView
                android:text="23.56"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/tomato"
                android:textSize="@dimen/xxlTextSize"
                android:gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/save_fuel"
                android:gravity="center"/>
        </LinearLayout>
        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/darkGrey"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingTop="20dp"
            android:background="@color/colorWhite"
            android:paddingBottom="20dp"
            >
            <TextView
                android:text="23.56"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/tomato"
                android:textSize="@dimen/xxlTextSize"
                android:gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/today_emission"
                android:gravity="center"/>
        </LinearLayout>

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/darkGrey"/>

    <LinearLayout
        android:onClick="goEmissionOrder"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingRight="5dp"
        android:clickable="true"
        android:background="@drawable/rect_bg_white_gray_press"
        >
        <TextView
            android:text="@string/emission_order"
            android:textSize="@dimen/lTextSize"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|right"
            android:padding="10dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:background="@color/transparent"/>
        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/btn_right_press"
            android:layout_gravity="center_vertical"
            />
    </LinearLayout>

    <LinearLayout
        android:onClick="goHistoryData"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingRight="5dp"
        android:clickable="true"
        android:background="@drawable/rect_bg_white_gray_press"
        >
        <TextView
            android:text="@string/history_data"
            android:textSize="@dimen/lTextSize"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|right"
            android:padding="10dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:background="@color/transparent"/>
        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/btn_right_press"
            android:layout_gravity="center_vertical"
            />
    </LinearLayout>

    <LinearLayout
        android:onClick="goSavePoint"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingRight="5dp"
        android:clickable="true"
        android:background="@drawable/rect_bg_white_gray_press"
        >
        <TextView
            android:text="@string/save_point"
            android:textSize="@dimen/lTextSize"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|right"
            android:padding="10dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:background="@color/transparent"/>
        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/btn_right_press"
            android:layout_gravity="center_vertical"
            />
    </LinearLayout>

</LinearLayout>