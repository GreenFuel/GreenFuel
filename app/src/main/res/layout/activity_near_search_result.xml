<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/whitesmoke">
        <Button
            android:onClick="back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/bn_bg_back"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/nearSearchTitle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/near"
            android:gravity="center"
            android:textSize="@dimen/lTextSize"
            android:textColor="@color/colorDark"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/textViewMiddle"
        android:layout_below="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/darkGrey"/>
    <com.amap.api.maps.MapView
        android:layout_below="@+id/textViewMiddle"
        android:id="@+id/nearSearchResultMap"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </com.amap.api.maps.MapView>
    <LinearLayout
        android:id="@+id/poi_detail"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:background="@drawable/border_bg"
        android:visibility="gone"
        >
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:background="@drawable/border_bg"
        >
        <TextView
            android:id="@+id/poi_name"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="12dp"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:textColor="@color/royalblue"
            android:textSize="@dimen/mTextSize" />
        <TextView
            android:id="@+id/poi_address"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_alignParentStart="true"
            android:layout_below="@id/poi_name"
            android:layout_marginStart="12dp"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:textColor="@color/colorDark"
            android:textSize="@dimen/mTextSize" />
        <TextView
            android:id="@+id/poi_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@id/poi_address"
            android:layout_marginStart="12dp"
            android:gravity="center_vertical"
            android:textColor="@color/colorDark"
            android:textSize="@dimen/sTextSize" />
    </RelativeLayout>
        <TextView
            android:id="@+id/tvNavigate"
            android:clickable="true"
            android:paddingRight="10dp"
            android:drawableLeft="@mipmap/navigate"
            android:drawablePadding="-3dp"
            android:gravity="center"
            android:text="@string/navigate"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/colorIconBlue"/>
    </LinearLayout>
</RelativeLayout>